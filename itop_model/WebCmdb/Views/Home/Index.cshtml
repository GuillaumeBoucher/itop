@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/mainView.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <small> Saisies en cours ...   </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Accueil</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">

    <!-- TABLE: LATEST ORDERS -->
    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Employées actifs</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">

            </div>
            <!-- /.table-responsive -->
         
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    <!-- TABLE: LATEST ORDERS -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Employées disponibles</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table no-margin">
                <thead>
                    <tr>
                        <th>Pointer</th>
                        <th>Employés</th>
                        <th>Status</th>                        
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var Employee in Model)
                        {
                            if ((Employee.status == "absent") || Employee.status == "repo")
                            {
                                <tr>
                                    <td><a href="~/Pointeuse/Index/@Employee.id"><i class="text-blue fa fa-edit"></i></a></td>
                                    <td><a href="~/Employee/Edit/@Employee.id"> @Employee.prenom @Employee.nom</a></td>
                                    @if(Employee.status == "absent")
                                    {
                                        <td><span class="label label-primary">absent</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-info">En repos</span></td>
                                    }
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <!-- /.table-responsive -->
        </div>
    </div>
    <!-- /.box -->



</section>
<!-- /.content -->